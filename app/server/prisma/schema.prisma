generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("PG_URL")
}

model User {
  id      String   @id @default(uuid(7))
  email   String   @unique
  role    UserRole
  resumes Resume[]
}

model Resume {
  id          String @id @default(uuid(7))
  title       String
  description String
  salary      Float
  author      User   @relation(fields: [authorId], references: [id], onDelete: Cascade)
  authorId    String
}

enum UserRole {
  HR
  CANDIDATE
}
